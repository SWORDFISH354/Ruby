
@{
    ViewBag.Title = "Ticketing";
    ViewBag.Name = "Ticketing";
}
@section scripts
{
    <script src="@Url.Content("~/Binding/ViewModels/TicketViewModel.js")" type="text/javascript"></script>
}
<h2>Ticketing</h2>


<div ng-controller="TicketViewModel" class="row" ng-cloak>
    <div class="col-md-4">
        <a class="btn btn-sm btn-success " href="@Url.Action("TicketStep1", "Ticket", new {id = 0})"><i class="glyphicon glyphicon-plus"></i> New Ticketing</a>
        <a class="btn btn-sm btn-info " href="@Url.Action("History", "Ticket")"><i class="glyphicon glyphicon-backward"></i> History</a>
    </div>


    <div class=" col-lg-12">

        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Pending Bookings</h3>
            </div>
            <div class="panel-body">
                <table st-table="displayedCollection" st-safe-src="List" class="table  table-hover table-condensed table-striped table-responsive">
                    <thead class="table-header">
                        <tr>
                            <th colspan="5"><input st-search="" class="form-control" placeholder="global search ..." type="text" /></th>
                        </tr>
                        <tr>
                            <th>Select</th>
                            <th st-sort="ID">BookingID</th>
                            <th st-sort="Name">Status</th>
                            <th st-sort="Position">Issue Date</th>
                            <th st-sort="PassportNumber">InvoiceNo</th>
                        </tr>

                    </thead>
                    <tbody>
                        <tr ng-repeat="row in displayedCollection">
                            <td>
                                <button type="button" ng-click="SelectEmployee(row)" class="btn btn-xs btn-info">
                                    <span class="glyphicon glyphicon-hand-up"></span>Select
                                </button>
                            </td>
                            <td>{{row.ID}}</td>
                            <td>{{row.Name}}</td>
                            <td>{{row.Position}}</td>
                            <td>{{row.PassportNumber}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>




    @*TODO: Pending Ticket history list*@


</div>

