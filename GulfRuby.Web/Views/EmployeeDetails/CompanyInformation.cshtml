
@{
    ViewBag.Title = "CompanyInformation";
    ViewBag.Name = "CompanyInformation";
}
@section scripts
{
    <script src="@Url.Content("~/Binding/Models/CompanyInformationModel.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Binding/ViewModels/CompanyInformationViewModel.js")" type="text/javascript"></script>
}




<div class="page-heading" style="color: steelblue">
    <h3>Company Information</h3>
</div>
<div class="alert alert-info">

    <div data-ng-controller="CompanyInformationViewModel" ng-cloak>
        <form class="form-horizontal">
            <fieldset>
                <div class="form-group">
                    <label for="inputTourism" class="col-md-2 control-label">Tourism License Number</label>
                    <div class="col-md-3">
                        <input type="text" class="form-control" id="inputTourism" placeholder="Tourism License Number" ng-model="companyInformationModel.TourismLicense">
                    </div>
                    <label for="inputTourismExpiryDate" class="col-md-2 control-label">Expiry Date</label>
                    <div class="input-group col-md-3">
                        <input type="text" class="form-control" id="inputTourismExpiryDate" is-open="openedTourismExpiry" datepicker-popup="dd/MM/yyyy"
                               placeholder="Tourism Expiry Date" ng-model="companyInformationModel.TourismExpiry">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-default" ng-click="openTourismExpiry($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputRent" class="col-md-2 control-label">Rent Amount</label>
                    <div class="col-md-3">
                        <input type="text" class="form-control" id="inputRent" placeholder="Rent Amount" ng-model="companyInformationModel.Rent">
                    </div>
                    <label for="inputRentExpiryDate" class="col-md-2 control-label">Expiry Date</label>
                    <div class="input-group col-md-3">
                        <input type="text" class="form-control" id="inputRentExpiryDate" is-open="openedRentExpiry" datepicker-popup="dd/MM/yyyy"
                               placeholder="Rent Expiry Date" ng-model="companyInformationModel.RentExpiry">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-default" ng-click="openRentExpiry($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                        </span>
                    </div>
                </div>


                <div class="form-group">
                    <label for="inputWasteNumber" class="col-md-2 control-label">Waste management #</label>
                    <div class="col-md-3">
                        <input type="text" class="form-control" id="inputWasteNumber" placeholder="Waste Management #" ng-model="companyInformationModel.WasteNumber">
                    </div>
                    <label for="inputWasteNumberExpiryDate" class="col-md-2 control-label">Expiry Date</label>
                    <div class="input-group col-md-3">
                        <input type="text" class="form-control" id="inputWasteNumberExpiryDate" is-open="openedWasteNumberExpiry" datepicker-popup="dd/MM/yyyy"
                               placeholder="Waste Managment # Expiry Date" ng-model="companyInformationModel.WasteNumberExpiry">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-default" ng-click="openWasteNumberExpiry($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                        </span>
                    </div>
                </div>


                <div class="form-group">
                    <label for="inputCivilDefenceNumber" class="col-md-2 control-label">Civil Defence certificate #</label>
                    <div class="col-md-3">
                        <input type="text" class="form-control" id="inputCivilDefenceNumber" placeholder="Civil Defence #" ng-model="companyInformationModel.CivilDefence">
                    </div>
                    <label for="inputCivilDefenceExpiryDate" class="col-md-2 control-label">Expiry Date</label>
                    <div class="input-group col-md-3">
                        <input type="text" class="form-control" id="inputCivilDefenceExpiryDate" is-open="openedCivilDefenceExpiry" datepicker-popup="dd/MM/yyyy"
                               placeholder="Civil Defence # Expiry Date" ng-model="companyInformationModel.CivilDefenceExpiry">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-default" ng-click="openCivilDefenceExpiry($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputSponsorship" class="col-md-2 control-label">Sponsorship amount</label>
                    <div class="col-md-3">
                        <input type="text" class="form-control" id="inputSponsorship" placeholder="Sponsorship amount" ng-model="companyInformationModel.Sponsorship">
                    </div>
                    <label for="inputSponsorshipExpiryDate" class="col-md-2 control-label">Expiry Date</label>
                    <div class="input-group col-md-3">
                        <input type="text" class="form-control" id="inputSponsorshipExpiryDate" is-open="openedSponsorshipExpiry" datepicker-popup="dd/MM/yyyy"
                               placeholder="Sponsorship amount Expiry Date" ng-model="companyInformationModel.SponsorshipExpiry">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-default" ng-click="openSponsorshipExpiry($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label" for="disabledInput">Last Modified By</label>
                    <div class="col-md-3">
                        <input class="form-control" id="disabledInput" type="text" ng-model="companyInformationModel.LastModifiedBy" disabled="">
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-md-2 control-label" for="disabledInput">Modified Time</label>
                    <div class="col-md-3">
                        <input class="form-control" id="disabledInput" type="text" ng-model="companyInformationModel.AddedTime" disabled="">
                    </div>
                </div>

                @* Button *@
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-info" ng-click="submit()">
                            <i class="glyphicon glyphicon-hand-up"></i> Submit
                        </button>
                    </div>
                </div>
            </fieldset>
        </form>
        @Html.Partial("~/Views/Shared/_ValidationErrors.cshtml")
        @Html.Partial("~/Views/Shared/_SucessPanel.cshtml")
    </div>
    </div>
