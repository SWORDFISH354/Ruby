@{
    ViewBag.Title = "AllEmployees";
    ViewBag.Name = "AllEmployees";
}

@section scripts
{
    @*<script src="@Url.Content("~/Binding/Models/EmployeeDetailsModel.js")" type="text/javascript"></script>*@
    <script src="@Url.Content("~/Binding/ViewModels/AllEmployeesViewModel.js")" type="text/javascript"></script>
}

<div ng-controller="AllEmployeesViewModel" ng-cloak>
    <div class="col-md-4">
        <a class="btn btn-sm btn-success " href="@Url.Action("EmployeeDetails", "EmployeeDetails", new { id = 0})"><i class="glyphicon glyphicon-plus"></i> Add Employee</a>
    </div>
    <div class=" col-lg-12">

        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">All Employees</h3>
            </div>
            <div class="panel-body">
                <table st-table="displayedCollection" st-safe-src="Employees" class="table  table-hover table-condensed table-striped table-responsive">
                    <thead class="warning">
                        <tr>
                            <th colspan="5"><input st-search="" class="form-control" placeholder="global search ..." type="text" /></th>
                        </tr>
                        <tr>
                            <th>Select</th>
                            <th st-sort="Id">Id</th>
                            <th st-sort="Name">Name</th>
                            <th st-sort="Position">Position</th>
                            <th st-sort="PassportNumber">Passport Number</th>
                            <th st-sort="VisaNumber">Visa Number</th>
                            <th st-sort="EmiratesID">Emirates ID</th>
                            <th st-sort="BasicSalary">Basic Salary</th>
                        </tr>

                    </thead>
                    <tbody>
                        <tr ng-repeat="row in displayedCollection">
                            <td>
                                <button type="button" ng-click="SelectEmployee(row)" class="btn btn-xs btn-info">
                                    <span class="glyphicon glyphicon-hand-up"></span>Select
                                </button>
                            </td>
                            <td>{{row.Id}}</td>
                            <td>{{row.Name}}</td>
                            <td>{{row.Position}}</td>
                            <td>{{row.PassportNumber}}</td>
                            <td>{{row.VisaNumber}}</td>
                            <td>{{row.EmiratesID}}</td>
                            <td>{{row.BasicSalary}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>